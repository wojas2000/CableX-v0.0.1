<Window x:Class="CableX_v0._0._1.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CableX_v0._0._1"
        mc:Ignorable="d"
        Title="Help Window" Height="500" Width="800"
        WindowStartupLocation="Manual" Top="0" Left="1000">
    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="row_information" Height="80"/>
            <RowDefinition x:Name="row_information_add" Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Program do obliczeń zabezpieczeń kabli oraz obwodów instalacji elektrycznej." HorizontalAlignment="Left" Margin="10" VerticalAlignment="Stretch" Grid.ColumnSpan="3" FontSize="15" FontWeight="Bold"/>
        <Label Content="W celu wykonania obliczeń wprowadź następujące dane:" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Center" Grid.ColumnSpan="3" FontSize="15" FontWeight="Bold"/>

        <StackPanel Grid.Row="1" Grid.Column="1">
            <Button x:Name="button_exit" Content="Zamknij pomoc" Height="35" Width="200" Click="button_exit_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,300,10,0"/>
        </StackPanel>
    </Grid>
</Window>
