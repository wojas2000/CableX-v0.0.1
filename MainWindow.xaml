<!-- Auto size for main window, name for app is in namespace in .cs file -->

<Window x:Class="CableX_v0._0._1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CableX_v0._0._1"
        mc:Ignorable="d"
        SizeToContent="Height"    
        Title="{x:Static local:ApplicationService.myTitle}" Height="450" Width="800">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="column_circuit" Width="10*"/>
            <ColumnDefinition x:Name="pnl_help" Width="5*"/>       
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="row_circuit_number" Height="5*"/>
            <RowDefinition x:Name="row_start_end_circuit" Height="10*"/>
        </Grid.RowDefinitions>

        <StackPanel>            
        </StackPanel>    

    </Grid>
</Window>
